rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Pravila za korisničke podatke - svaki korisnik vidi samo svoje
    match /users/{userId} {
      // Korisnik može čitati i pisati samo svoje podatke
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Pravila za obračune unutar korisničkog dokumenta
      match /obracuni/{obracunId} {
        // Korisnik može čitati i pisati samo svoje obračune
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Pravila za cjenovnik unutar korisničkog dokumenta
      match /cjenovnik/{cjenovnikId} {
        // Korisnik može čitati i pisati samo svoj cjenovnik
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}

